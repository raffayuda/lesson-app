// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
}

enum AttendanceStatus {
  PRESENT  // Hadir
  SICK     // Sakit
  PERMISSION // Izin
  ABSENT   // Alfa
}

enum AttendanceMethod {
  MANUAL
  QR
}

enum PaymentStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                String       @id @default(uuid())
  email             String       @unique
  password          String
  name              String
  role              Role         @default(STUDENT)
  resetToken        String?
  resetTokenExpiry  DateTime?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  
  student           Student?
  markedAttendances Attendance[] @relation("MarkedBy")
  approvedPayments  Payment[]    @relation("ApprovedBy")
  uploadedMaterials Material[]   @relation("UploadedMaterials")

  @@map("users")
}

model Student {
  id          String       @id @default(uuid())
  userId      String       @unique
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  class       String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  attendances Attendance[]
  schedules   ScheduleStudent[]
  payments    Payment[]

  @@map("students")
}

model Schedule {
  id           String       @id @default(uuid())
  subject      String       // Mata pelajaran
  class        String       // Kelas
  day          String       // Hari (Monday, Tuesday, etc)
  startTime    String       // Format: "08:00"
  endTime      String       // Format: "09:30"
  teacherName  String
  room         String
  qrCode       String       @unique // QR Code untuk jadwal ini
  specificDate DateTime?    // Tanggal spesifik untuk jadwal satu kali (null = berulang setiap minggu)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  
  attendances Attendance[]
  students    ScheduleStudent[]
  sections    MaterialSection[] // Linked to sections
  // Removed direct materials relation, now goes through sections
  @@map("schedules")
}

// ... other models ...

model MaterialSection {
  id          String   @id @default(uuid())
  title       String
  scheduleId  String
  schedule    Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  materials   Material[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("material_sections")
  @@index([scheduleId])
}

model Material {
  id          String   @id @default(uuid())
  sectionId   String   // Link to section instead of schedule
  section     MaterialSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  title       String
  description String?
  fileName    String
  fileSize    Int
  fileData    Bytes?   @db.ByteA // Store PDF as binary data (legacy, optional)
  fileUrl     String?  // Cloudinary URL for new uploads
  uploadedBy  String
  uploader    User     @relation("UploadedMaterials", fields: [uploadedBy], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("materials")
  @@index([sectionId])
  @@index([uploadedBy])
}

model Attendance {
  id          String           @id @default(uuid())
  studentId   String
  student     Student          @relation(fields: [studentId], references: [id], onDelete: Cascade)
  scheduleId  String
  schedule    Schedule         @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  status      AttendanceStatus
  date        DateTime         @default(now()) @db.Timestamp 
  scheduleDate DateTime?       // Target date of the schedule
  method      AttendanceMethod @default(MANUAL)
  markedBy    String?
  marker      User?            @relation("MarkedBy", fields: [markedBy], references: [id])
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@map("attendances")
  @@index([studentId])
  @@index([scheduleId])
}

model ScheduleStudent {
  id         String   @id @default(uuid())
  studentId  String
  student    Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  scheduleId String
  schedule   Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  assignedAt DateTime @default(now())

  @@unique([studentId, scheduleId])
  @@map("schedule_students")
}

model Payment {
  id          String        @id @default(uuid())
  studentId   String
  student     Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  amount      Int           // Using Int for IDR
  payerName   String?       // Name of person making payment
  paymentDate DateTime?     // Date of payment
  description String?       // Payment description/notes
  status      PaymentStatus @default(PENDING)
  method      String?       
  proofUrl    String?
  approvedBy  String?
  approver    User?         @relation("ApprovedBy", fields: [approvedBy], references: [id])
  approvedAt  DateTime?     // When payment was approved
  rejectionReason String?   // Reason if payment was rejected
  month       String?
  year        Int?
  deadline    DateTime?     // batas_pembayaran referenced in previous logs
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("payments")
  @@index([studentId])
}
